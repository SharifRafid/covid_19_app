<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bg"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/header_text_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/header_text_main"
        android:foregroundGravity="center_vertical"
        android:layout_marginTop="10dp"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_text_main"
        android:layout_above="@id/bottom_nav_background" />

    <LinearLayout
        android:id="@+id/bottom_nav_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_bar_bg"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <ImageView
            android:id="@+id/home_button_nav"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/home_button_nav"/>
        <ImageView
            android:id="@+id/help"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/help_button_nav"/>
        <ImageView
            android:id="@+id/news"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/survey_button_nav"/>
        <ImageView
            android:id="@+id/stat_button_nav"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/stat_button_nav"/>
        <ImageView
            android:id="@+id/tips"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/tips_button_nav"/>
        <ImageView
            android:id="@+id/corona"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/cautions_button_nav"/>
        <ImageView
            android:id="@+id/settings"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/settings_button_nav"/>
    </LinearLayout>
</RelativeLayout>